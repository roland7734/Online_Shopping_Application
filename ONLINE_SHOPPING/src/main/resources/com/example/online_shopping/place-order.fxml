<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="542.0" prefWidth="523.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.online_shopping.Controllers.PlaceOrderController">
   <children>
      <Label layoutX="196.0" layoutY="36.0" text="Place Order">
         <font>
            <Font name="Cambria Bold" size="24.0" />
         </font>
      </Label>
      <TextArea fx:id="addressTextArea" layoutX="40.0" layoutY="145.0" prefHeight="86.0" prefWidth="442.0" promptText="Serbia, Belgrade, Oat Street, nr. 365" wrapText="true">
         <font>
            <Font name="Cambria" size="20.0" />
         </font>
      </TextArea>
      <Label layoutX="41.0" layoutY="111.0" text="Delivery Address">
         <font>
            <Font name="Cambria Bold" size="20.0" />
         </font>
      </Label>
      <Label layoutX="41.0" layoutY="247.0" text="Payment Method">
         <font>
            <Font name="Cambria Bold" size="20.0" />
         </font>
      </Label>
      <ComboBox fx:id="paymentComboBox" layoutX="40.0" layoutY="287.0" prefWidth="150.0" promptText="Payment Method" styleClass="search-box" stylesheets="@Styles/Styles.css" />
      <Button fx:id="cancelButton" layoutX="92.0" layoutY="461.0" mnemonicParsing="false" onAction="#onCancelButtonClick" styleClass="add-btn" stylesheets="@Styles/Styles.css" text="Cancel">
         <font>
            <Font name="Cambria Bold" size="20.0" />
         </font>
      </Button>
      <Button fx:id="finishButton" layoutX="346.0" layoutY="461.0" mnemonicParsing="false" onAction="#onFinishButtonClick" styleClass="add-btn" stylesheets="@Styles/Styles.css" text="Finish" visible="false">
         <font>
            <Font name="Cambria Bold" size="20.0" />
         </font>
      </Button>
      <Label layoutX="41.0" layoutY="338.0" text="Voucher Code">
         <font>
            <Font name="Cambria Bold" size="20.0" />
         </font>
      </Label>
      <Label layoutX="40.0" layoutY="362.0" text="(If you own one)">
         <font>
            <Font name="Cambria Italic" size="14.0" />
         </font>
      </Label>
      <TextField fx:id="voucherTextField" layoutX="41.0" layoutY="390.0" promptText="Voucher Code" stylesheets="@Styles/Styles.css">
         <font>
            <Font name="Cambria" size="20.0" />
         </font>
      </TextField>
   </children>
</AnchorPane>
