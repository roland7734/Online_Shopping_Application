<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.text.Font?>

<HBox prefHeight="61.0" prefWidth="1258.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.online_shopping.Controllers.CartItemController">
   <children>
      <Pane prefHeight="82.0" prefWidth="20.0" />
      <ImageView fx:id="productImage" fitHeight="81.0" fitWidth="120.0" pickOnBounds="true" preserveRatio="true">
         <image>
            <Image url="@ProductsImages/samsung_galaxy_s21.jpg" />
         </image>
      </ImageView>
      <Pane prefHeight="82.0" prefWidth="26.0" />
      <Label fx:id="productNameLabel" alignment="CENTER" prefHeight="82.0" prefWidth="303.0" text="Smasugn Galaxy">
         <font>
            <Font name="System Bold" size="16.0" />
         </font>
      </Label>
      <Pane prefHeight="82.0" prefWidth="44.0" />
      <Label fx:id="productPriceLabel" alignment="CENTER" prefHeight="82.0" prefWidth="107.0" text="\$799.99">
         <font>
            <Font name="System Bold" size="16.0" />
         </font>
      </Label>
      <Pane prefHeight="82.0" prefWidth="52.0" />
      <HBox prefHeight="82.0" prefWidth="169.0">
         <children>
            <Button fx:id="plusButton" alignment="CENTER" mnemonicParsing="false" onAction="#onPlusButtonClick" prefHeight="49.0" prefWidth="41.0" styleClass="add-btn" stylesheets="@Styles/Styles.css" text="+">
               <font>
                  <Font name="Cambria" size="28.0" />
               </font>
               <HBox.margin>
                  <Insets top="15.0" />
               </HBox.margin>
            </Button>
            <Label fx:id="quantityLabel" alignment="CENTER" prefHeight="82.0" prefWidth="93.0" text="1">
               <font>
                  <Font name="System Bold" size="16.0" />
               </font>
            </Label>
            <Button fx:id="minusButton" alignment="CENTER" mnemonicParsing="false" onAction="#onMinusButtonClick" prefHeight="54.0" prefWidth="21.0" styleClass="add-btn" stylesheets="@Styles/Styles.css" text="-">
               <font>
                  <Font name="Cambria" size="28.0" />
               </font>
               <HBox.margin>
                  <Insets top="15.0" />
               </HBox.margin>
            </Button>
         </children>
      </HBox>
      <Pane prefHeight="82.0" prefWidth="44.0" />
      <Label fx:id="subtotalLabel" alignment="CENTER" prefHeight="82.0" prefWidth="142.0" text="\$799.99">
         <font>
            <Font name="System Bold" size="16.0" />
         </font>
      </Label>
      <Pane prefHeight="82.0" prefWidth="44.0" />
      <HBox>
         <children>
            <Button fx:id="removeButton" alignment="CENTER" mnemonicParsing="false" onAction="#onRemoveButtonClick" prefHeight="51.0" prefWidth="143.0" styleClass="add-btn" stylesheets="@Styles/Styles.css" text="Remove">
               <font>
                  <Font name="Cambria" size="16.0" />
               </font>
               <HBox.margin>
                  <Insets top="15.0" />
               </HBox.margin>
            </Button>
         </children>
      </HBox>
      <Pane prefHeight="82.0" prefWidth="44.0" />
   </children>
</HBox>
